<div class="painel col-md-10 col-md-offset-1">
  <div class="titulo">
    <h2>Velório <%= @velorio.nome %></h2>
  </div>
  <div class="conteudo-painel">
    <table border="1" class="table table-striped">
      <thead>
        <tr id="home-vel">
          <th>Sala</th>
          <th>Sepultamento</th>
          <th>Atendente</th>
          <th>Falecido</th>
          <th>Munícipe</th>
          <th>Cemitério</th>
        </tr>
      </thead>
      <tbody>
        <% @reservas.order(sepultamento: :asc).each do |r| %>
        <tr>
          <td><%= Velorio.find(r.velorio_id).salas.index(Sala.find(r.sala_id)).to_i + 1 %></td>
          <td><%= r.sepultamento.strftime("%d/%m/%y %H:%M") %></td>
          <td><%= r.atendente.funcionario.nome %></td>
          <td><%= r.falecido %></td>
          <td><%= r.municipe %></td>
          <td><%= r.cemiterio.nome %></th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="painel-footer"></div>
</div>