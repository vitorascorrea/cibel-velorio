<div class="painel tam13 col-md-offset-1">
  <div class="titulo">
    <h2>Relatório de reservas</h2>
  </div>
  <div class="conteudo-painel">
    <table border="1" class="table table-hover">
      <thead>
        <tr>
          <th>Velorio</th>
          <th>Sala</th>
          <th>Sepultamento</th>
          <th>Atendente</th>
          <th>Falecido</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @reservas.each do |r| %>
        <tr>
          <td><%= r.velorio.nome %></td>
          <td><%= r.sala.id %></td>
          <td><%= r.sepultamento %></td>
          <td><%= r.atendente.funcionario.nome %></td>
          <td><%= r.falecido %></td>
          <td><i class="fa fa-pencil-square-o"></i><%= link_to "Editar", edit_reserva_path(r) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="painel-footer">
    <button class="btn btn-danger">Kon, coloca um botão de voltar aqui depois, por favor!</button>
  </div>
</div>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_tag selecao_velorio_path, :method => 'post', remote: true do |f| %>
      <%= label_tag :velorio_id, "Selecione o local de velório" %>
      <%= select_tag :velorio_id, options_for_select(Velorio.all.collect{ |v| [v.nome, v.id] }), class: 'form-control' %>
      <%= submit_tag "Enviar" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12" style="margin-top: 20px;">
    <div id="agenda-selecionada"></div>
    <div id="velorio-selecionado"></div>
  </div>
</div>
