<div class="painel col-md-10 col-md-offset-1">
  <div class="titulo">
    <h2>Resultado</h2>
  </div>
  <div class="conteudo-painel">
  	
    <% if resultado and resultado.any? %>
	    <table border="1" class="table table-striped">
	      <thead>
	        <tr>
	          <th>Nome</th>
	          <th>Falecido</th>
	          <th>Sepultamento</th>
	        </tr>
	      </thead>
	      <tbody>
					<% resultado.each do |r| %>
					<tr>
		      	<td><%= r.falecido %></td>
		      	<td><%= r.velorio.nome %></td>
		      	<td><%= r.sepultamento.to_s.chomp(' -0200') %></td>
		      </tr>
		      <% end %>
	      </tbody>
	    </table>
    <% else %>
    	<div class="titulo_foot">
    		<h3>NÃ£o Encontrado</h3>
  		</div>
    <% end %>
    
  </div>
  <div class="painel-footer">
  </div>
</div>