<div class="row">
	<div class="panel col-md-4 col-md-offset-4">
		<div class="panel-heading title centralizar-texto">
			Preencha abaixo para acessar
		</div>    
		<%= form_for(:session, url: login_path) do |f| %>

		<%= f.label :rf, "RF" %>
		<%= f.text_field :rf, class: 'form-control', maxlength: 7, autofocus: true %>

		<%= f.label :password, "Senha" %>
		<%= f.password_field :password, class: 'form-control' %>

		<%= f.submit "Acessar", class: "btn btn-block btn-danger" %>
		<% end %>
	</div>
</div>