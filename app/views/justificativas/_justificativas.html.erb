<div id="paginate_ajax_justificativas">
  <%= will_paginate :previous_label => t("Anterior"), :next_label => t("Próximo") %>
  <table border="1" class="table table-striped">
    <thead>
      <th>Velório</th>
      <th>Objeto</th>
      <th>Ação</th>
      <th>Justificativa</th>
      <th>Responsável</th>
      <th>Horário</th>
    </thead>
    <% @justificativas.each do |j| %>
      <tbody>
        <%
          objeto = Reserva.find(j.reserva) if j.reserva
          objeto = Sala.find(j.sala) if j.sala
          velorio = objeto.velorio
          responsavel = Atendente.find(j.atendente)
        %>
        <td><%= velorio.nome %></td>
        <td><%= objeto.class %></td>
        <td><%= j.acao %></td>
        <td><%= j.justificativa %></td>
        <td><%= responsavel.funcionario.nome %></td>
        <td><%= j.horario.strftime("%d/%m/%Y %H:%M") %></td>
      </tbody>
    <% end %> 
    </table>
  <%= will_paginate :previous_label => t("Anterior"), :next_label => t("Próximo") %>
</div>