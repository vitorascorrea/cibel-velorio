<div class="row">
  <div class="col-md-4 col-md-offset-4" style="text-align: center; margin-bottom: 30px; margin-top: 15px;">
    <%= image_tag("SFMSP_Logo.png", width: "225px", height: "auto", alt: "SFMSP") %>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-striped table-bordered" border=0 width=100%>
      <tr>
        <td class="left">Nome do Contratante:</td>
        <td><%= @reserva.municipe %></td>
      </tr>
       <tr>
        <td class="left">Nome do Falecido:</td>
        <td><%= @reserva.falecido %></td>
      </tr>
       <tr>
        <td class="left">Número da Declaração de Óbito:</td>
        <td><%= @reserva.d_obito %></td>
      </tr>
       <tr>
        <td class="left">Cemitério:</td>
        <td><%= Cemiterio.find(@reserva.cemiterio_id).nome %></td>
      </tr>
       <tr>
        <td class="left">Velório:</td>
        <td><%= Velorio.find(@reserva.velorio_id).nome %></td>
      </tr>
       <tr>
        <td class="left">Sala:</td>
        <td><%= Velorio.find(@reserva.velorio_id).salas.index(Sala.find(@reserva.sala_id)).to_i + 1 %></td>
      </tr>
       <tr>
        <td class="left">Horario de Sepultamento:</td>
        <td><%= @reserva.sepultamento.strftime("%d/%m/%Y %H:%M") %></td>
      </tr>
       <tr>
        <td class="left">Data de Contratação:</td>
        <td><%= Time.now.in_time_zone.strftime("%d/%m/%Y %H:%M") %></td>
      </tr>
    </table>
    <a class="noPrint cibelbuttonprint" href="#" onclick="window.print();return false;">Imprimir</a>
  </div>
</div>