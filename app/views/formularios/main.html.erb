<div class="container">
<div class="container" style="margin-top: 100px; margin-bottom: 100px;">
    <div class="row">
        <div class="row step">
            <div id="head_step-1" class="col-md-4 activestep">
                <p>Selecione o local de sepultamento e velório</p>
            </div>
            <div id="head_step-2" class="col-md-4">
                <p>Escolha a sala e horário</p>
            </div>
            <div id="head_step-3" class="col-md-4">
                <p>Preencha as informações do falecido</p>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="progress" id="progress1">
            <div class="progress-bar" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
            </div>
            <span class="progress-type">Processo de Reserva de Velório</span>
            <span class="progress-completed">0%</span>
        </div>
    </div>
    
    
        <%= render 'formularios/selecao_velorio' %>
        <%= render 'formularios/filtro_salas' %>
        <%= render 'formularios/dados_reserva' %>
        <%= render 'formularios/concluir_reserva' %>

</div>
</div>