<div class="tela-principal">
    <div class="cabecalho-principal">
        <div class="step col-md-offset-3 row">
            <div id="head_step-1" class="col-md-2 activestep">
                <span class="fa fa-cloud-download"></span>
                <p>Selecione o local</p>
            </div>
            <div id="head_step-2" class="col-md-2">
                <span class="fa fa-pencil"></span>
                <p>sala e horário</p>
            </div>
            <div id="head_step-3" class="col-md-2">
                <span class="fa fa-refresh"></span>
                <p>Info. falecido</p>
            </div>
            <div id="head_step-4" class="col-md-2">
                <span class="fa fa-dollar"></span>
                <p>Conclua a reserva</p>
            </div>
        </div> <!-- step -->
    <div class="row">
        <div class="progress col-md-offset-3" id="progress1">
            <div class="progress-bar" role="progressbar" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100" style="width: 0%;">
            </div>
            <span class="progress-type">Processo de Reserva de Velório</span>
            <span class="progress-completed">0%</span>
        </div>
    </div>
    </div>
    <div class="corpo-principal">
        <%= render 'formularios/selecao_velorio' %>
        <%= render 'formularios/filtro_salas' %>
        <%= render 'formularios/dados_reserva' %>
        <%= render 'formularios/concluir_reserva' %>
    </div>
</div>